<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistrarUsuarioServlet</servlet-name>
        <servlet-class>Servlets.RegistrarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidarUsuarioServlet</servlet-name>
        <servlet-class>Servlets.ValidarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CierraRegimenServlet</servlet-name>
        <servlet-class>Servlets.CierraRegimenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RestriccionesServlet</servlet-name>
        <servlet-class>Servlets.RestriccionesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidaRestriccionesServlet</servlet-name>
        <servlet-class>Servlets.ValidaRestriccionesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarPerfilServlet</servlet-name>
        <servlet-class>Servlets.EditarPerfilServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidaEdicionUsuarioServlet</servlet-name>
        <servlet-class>Servlets.ValidaEdicionUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrarUsuarioServlet</servlet-name>
        <url-pattern>/RegistrarUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidarUsuarioServlet</servlet-name>
        <url-pattern>/ValidarUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CierraRegimenServlet</servlet-name>
        <url-pattern>/CierraRegimenServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RestriccionesServlet</servlet-name>
        <url-pattern>/RestriccionesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaRestriccionesServlet</servlet-name>
        <url-pattern>/ValidaRestriccionesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarPerfilServlet</servlet-name>
        <url-pattern>/EditarPerfilServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaEdicionUsuarioServlet</servlet-name>
        <url-pattern>/ValidaEdicionUsuarioServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
